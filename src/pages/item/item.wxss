.background {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
}

.movie-info {
  position: absolute;
  bottom: 0;
  height: 200rpx;
  background: #fff;
  padding: 20rpx 32rpx;
  opacity: .9;
  overflow: hidden;
}

.movie-title {
  display: block;
  font-size: 56rpx;
  margin: 10rpx 0;
}

.movie-rating {
  display: block;
  float: right;
  margin-top: -78rpx;
  font-size: 68rpx;
  color: #009688;
}

.movie-casts {
  display: block;
  font-size: 36rpx;
}

.movie-intro {
  position: absolute;
  display: block;
  bottom: -999rpx;
  height: 1000rpx;
  padding: 0 72rpx;
  background: #fff;
  opacity: .9;
  overflow: hidden;
}

.movie-intro-title {
  display: block;
  font-size: 30rpx;
  color: #000;
  margin: 40rpx 0;
}

.movie-intro-content {
  color: #353535;
  font-size: 24rpx;
}
