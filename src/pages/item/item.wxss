.background {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
}

.movie-info {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 210rpx;
  background: #fff;
  padding: 20rpx 0;
  opacity: .9;
}

.movie-title {
  display: block;
  font-size: 56rpx;
  margin: 10rpx 0;
}

.movie-rating {
  display: block;
  float: right;
  margin-top: -78rpx;
  font-size: 68rpx;
  color: #009688;
}

.movie-casts {
  display: block;
  font-size: 36rpx;
}

.movie-intro {
  position: absolute;
  display: block;
  bottom: -879rpx;
  height: 880rpx;
  padding: 0 56rpx;
  background: #fff;
  opacity: .9;
  overflow: scroll;
}

.movie-intro-title {
  display: block;
  font-size: 26rpx;
  color: #888;
  margin: 24rpx 0;
}

.movie-intro-content {
  color: #353535;
  font-size: 28rpx;
  overflow-y: scroll;
}
