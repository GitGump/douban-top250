.container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 96%;
    margin-left: 2%;
}

.movie-list {
    display: block;
    margin: 30rpx 0;
}

.movie-post {
    width: 210rpx;
    height: 300rpx;
}

.movie-info {
    position: relative;
    display: block;
    width: 210rpx;
}

.movie-title, .movie-rating {
    display: block;
    text-align: left;
    color: #000;
    font-size: 24rpx;
}

.bottom-tip {
    display: block;
    margin: 160rpx auto;
}
