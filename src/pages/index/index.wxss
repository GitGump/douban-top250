.movie-list {
    position: relative;
    width: 94%;
    height: 6rem;
    margin: 5px auto;
    padding: 5px;
    border: 1px solid #ddd;
    background: #eee;
}

.movie-post {
    position: absolute;
    display: block;
    top: 0;
    left: 0;
    width: 100px;
    height: 100%;
}

.movie-info {
    position: relative;
    display: block;
}

.movie-title {
    position: relative;
    display: block;
    margin: 8px 0 0 110px;
    font-size: 16px;
    font-weight: blod;
    color: #000;
}

.movie-director, .movie-year, .movie-rating{
    display: block;
    margin: 8px 0 0 110px;
    font-size: 12px;
    color: #999;
    clear: left;
}

.movie-casts {
    margin: 8px 0 0 110px;
    display: block;
    font-size: 12px;
    color: #999;
}

.bottom-tip {
    position: relative;
    text-align: center;
    color: #333;
}