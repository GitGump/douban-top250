.movie-list {
    width: 96%;
    left: 2%;
    right: 2%;
    height: 12rem;
    position: relative;
    margin: 5px 0 5px 0;
    border: 1px solid #ddd;
}

.movie-index {

}

.movie-post {
    position: absolute;
    width: 100%;
    height: 12rem;
    z-index: 0;
    opacity: .8;
}

.movie-text {
    position: absolute;
    width: 98%;
    bottom: 0;
    display: block;
    padding: 5px;
    background: #000;
    opacity: .3;
    z-index: 1;
}

.movie-title, .movie-rating {
    color: #fff;
}